extends layout

block content
  .container
    h1 Questioneer Posts
    br
    table.table.table-striped.table-condensed
      thead
        tr
          th Title
          th Bounty
          th Open?
          th Date

      tbody
        each post in posts
          tr
            td
              a(href="/posts/" + post._id) #{post.title}
            td
              = post.bounty
            td
              = post.answered ? "No" : "Yes"
            td
              = post.date.toLocaleString().split(' ').slice(1, 5).join(' ')
