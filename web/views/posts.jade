extends layout

block content
  .container
    h1 Questioneer Posts
    br
    table.table.table-striped.table-condensed
      thead
        tr
          th 
          th Title
          th User
          th Bounty
          th Open?
          th Date

      tbody
        each post in posts
          tr
            td
              .text-center
                a(href="/posts/" + post._id)
                  button(class="btn btn-info") View
            td
              .text-center
                = post.title
            td
              .text-center
                = post.user.username
            td
              .text-center
                = post.bounty
            td
              .text-center
                = post.answered ? "No" : "Yes"
            td
              .text-center
                = post.date.toLocaleString().split(' ').slice(1, 5).join(' ')
