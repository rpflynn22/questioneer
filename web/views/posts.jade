extends layout

block content
  .container
    h1 Questioneer Posts

    table.table.table-striped.table-condensed
      thead
        tr
          th Title
          th Date
          th Bounty
      tbody
        each post in posts
          tr
            td
              a(href="/posts/" + post._id) #{post.title}
            td
              = post.date.toLocaleString().split(' ').slice(1, 5).join(' ')
            td
              = post.bounty
