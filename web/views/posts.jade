extends layout

block content
  h1 Questioneer Posts

  table.table.table-striped.table-condensed
    thead
      tr
        th Title
        th Date
        th Bounty
    tbody
      each post in posts
        tr
          td
            a(href="/posts/" + post._id) #{post.title}
          td
            = post.date
          td
            = post.bounty
